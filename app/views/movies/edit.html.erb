<div class = "row">
	<div class="col-md-6 col-md-offset-3">
		<h1>編集画面</h1>
			<%= form_for(@movie) do |f| %>

			  <div class="field row">
			    <%= f.label :title %>
			    <%= f.text_field :title, class: 'col-xs-12 movie_title' %>
			  </div>

			  <div class="field row">
			    <%= f.file_field :image %>
			  </div>

			  <div class="field row">
			    <%= f.label :heading %>
			    <%= f.text_area :heading, class: 'col-xs-12 movie_body'%>
			  </div>

			  <div class="field row">
			    <%= f.collection_select :category_id, Category.all, :id, :name %>
			  </div>

			  <div class="actions row">
			    <%= f.submit class: 'btn btn-primary col-xs-12'%>
			  </div>
			<% end %>
	</div>
</div>