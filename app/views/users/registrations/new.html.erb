<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前 %><br>
    <%= f.text_field :name, autofocus: true, autocomplete: "名前" %>
  </div>

  <div class="field">
    <%= f.label :性別 %><br>
  <%= f.radio_button :sex, :male %>
  <%= f.label :sex, "男性", {value: :male, style: "display: inline-block;"} %>
  <%= f.radio_button :sex, :female %>
  <%= f.label :sex, "女性", {value: :female, style: "display: inline-block;"} %>
  </div>

  <div class="field">
    <%= f.label :年齢 %><br>
    <%= f.number_field :age, autofocus: true, autocomplete: "年齢" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 字以上入力してください。)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "パスワード" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "パスワード（確認）" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
